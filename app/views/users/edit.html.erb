<h2>User info</h2>

<%= form_for(@user) do |f| %>
	<div class="field">
		<%= f.label :name, "Name" %>
		<%= f.text_field :name %>
	</div>

	<div class="form-group has-icon">
	    <div class="user-edit-image">
	        <%= attachment_image_tag @user, :profile_image, size: "100x100", class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
	    </div>
	    <label class="control-label sr-only" for="inputEmail">ProfileImage</label>
	    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
	</div>

	<div class="field">
		<%= f.label :introduction, "Introduction" %>
		<%= f.text_area :introduction %>
	</div>

	<div class="action">
		<%=f.submit 'Update User' %>
	</div>

<% end %>