<h2>User info</h2>

<%= render "devise/shared/error_messages", resource: @user %>

<%= form_for(@user) do |f| %>
	<div class="field">
		<%= f.label :name, "Name" %>
		<%= f.text_field :name %>
	</div>

	<div class="field">
		<%= f.label :profile_image, "Image" %>
	    <label class="control-label sr-only" for="inputEmail">ProfileImage</label>
	    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
	</div>

	<div class="field">
		<%= f.label :introduction, "Introduction" %>
		<%= f.text_area :introduction %>
	</div>

	<div class="action">
		<%=f.submit 'Update User' %>
	</div>

<% end %>