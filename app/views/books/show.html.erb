<div class="row">
	<%= render 'books/info', book: @newbook, user: @user %>

	<div class="col-xs-9">
		<h2>Book detail</h2>
		<table class="table">
			<tr>
				<td>
					<%= link_to user_path(@user.id) do %>
						<%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class: "profile-thumb" %>
						<br><%= @user.name %>
					<% end %>
				</td>
				<td><%= @book.title %></td>
				<td><%= @book.body %></td>

				<% if @book.user == current_user %>
					<td><%= link_to "Edit", edit_book_path, class: "btn-sm btn-success" %></td>
					<td><%= link_to "Destroy", book_path(@book), class: "btn-sm btn-danger", method: :delete, "data-confirm" => "本当に消しますか？" %></td>
				<% end %>
			</tr>
		</table>
	</div>