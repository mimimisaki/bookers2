<div class="container">
	<div class="col-xs-3">
		<h2>User info</h2>
		<%= attachment_image_tag user, :profile_image, format: 'jpeg', size: "100x100", class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
		<table class="table">
			<tbody>
				<tr></tr>
				<tr>
					<th>name</th>
					<th><%= user.name %></th>
				</tr>
				<tr>
					<th>introduction</th>
					<th><%= user.introduction %></th>
				</tr>
			</tbody>
		</table>
		<div>
			<%= link_to "設定", edit_user_path(user.id) %>
		</div>
		<h2>New book</h2>
		<p>エラーメッセージ</p>
		<%= form_for(book) do |f| %>
			<div class="field">
				<%= f.label :title, "Title" %>
				<%= f.text_field :title %>
			</div>

			<div class="field">
				<%= f.label :body, "Opinion" %>
				<%= f.text_area :body %>
			</div>

			<div class="action">
				<%= f.submit 'Create Book', class: "btn btn-default" %>
			</div>
		<% end %>